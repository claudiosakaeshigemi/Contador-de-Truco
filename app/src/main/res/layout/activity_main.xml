<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="claudioshigemi.com.placardetruco.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical"
                android:paddingLeft="40dp"
                android:textAlignment="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_timeA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="Time A"
                        android:textColor="@android:color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txt_placarA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="40dp"
                    android:paddingTop="10dp"
                    android:text="0"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_1pontoA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_placarA"
                    android:background="#3B5998"
                    android:onClick="soma1pontoA"
                    android:text="  +1 ponto  "
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/btn_3pontoA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_placarA"
                    android:background="#3B5998"
                    android:onClick="soma3pontoA"
                    android:text="+3 pontos"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/btn_6pontoA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_placarA"
                    android:background="#3B5998"
                    android:onClick="soma6pontoA"
                    android:text="+6 pontos"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/btn_9pontoA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_placarA"
                    android:background="#3B5998"
                    android:onClick="soma9pontoA"
                    android:text="+9 pontos"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/btn_12pontoA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_placarA"
                    android:background="#3B5998"
                    android:onClick="soma12pontoA"
                    android:text="+12 pontos"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical"
                android:paddingLeft="40dp"
                android:textAlignment="center">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txt_timeB"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:paddingLeft="20dp"
                            android:text="Time B"
                            android:textColor="@android:color/black"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                    </RelativeLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_placarB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="40dp"
                    android:paddingTop="10dp"
                    android:text="0"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_1pontoB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_placarB"
                    android:background="#3B5998"
                    android:onClick="soma1pontoB"
                    android:text=" +1 ponto "
                    android:textAlignment="center"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/btn_3pontoB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_placarB"
                    android:background="#3B5998"
                    android:onClick="soma3pontoB"
                    android:text="+3 pontos"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/btn_6pontoB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_placarB"
                    android:background="#3B5998"
                    android:onClick="soma6pontoB"
                    android:text="+6 pontos"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/btn_9pontoB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_placarB"
                    android:background="#3B5998"
                    android:onClick="soma9pontoB"
                    android:text="+9 pontos"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/btn_12pontoB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_placarB"
                    android:background="#3B5998"
                    android:onClick="soma12pontoB"
                    android:text="+12 pontos"
                    android:textColor="@android:color/white" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#CC181E"
        android:onClick="resetPlacar"

        android:text="Reset"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/txt_mulaA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:paddingBottom="10dp"
        android:text="0"
        android:textColor="@android:color/black"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/txt_mulaA"
        android:paddingBottom="20dp"
        android:text="Mula"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_mulaB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:paddingBottom="10dp"
        android:text="0"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/txt_mulaB"
        android:layout_alignParentRight="true"
        android:paddingBottom="20dp"
        android:text="Mula"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

</RelativeLayout>
